---
layout: layouts/base.njk
---
<script src="//unpkg.com/alpinejs" defer></script>
<header class="header  site__header" x-data="{ open: false }">
  <button class="button  header__menu-button" aria-expanded="false" @click="open = true">menu</button>
  <nav class="header__menu" hidden id="menu" x-show="open" x-transition x-cloak>
    <button class="button  header__menu-close-button" aria-expanded="true" aria-controls="menu" @click="open = false">close</button>
    {%- include 'menu.njk' -%}
  </nav>
</header>
<main class="site__content">
  <div class="site__content-wave">
